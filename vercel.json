{
  "version": 2,
  "public": true,
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "api/index.ts"
    }
  ],
  "redirects": [
    {
      "source": "/",
      "destination": "/api",
      "permanent": false
    }
  ],
  "crons": [
    {
      "path": "/api/distribute-daily-jackpot",
      "schedule": "0 0 * * 1-6"
    },
    {
      "path": "/api/streaks-payout",
      "schedule": "0 0 * * *"
    },
    {
      "path": "/api/transfer-treasury-to-jackpot",
      "schedule": "0 0 * * 1-6"
    }
  ]
}